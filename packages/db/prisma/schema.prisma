generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  username String
  story    Story[]
  places   Places[]  
}

model Places {
  id        Int     @id @default(autoincrement())
  city      String
  country   String
  placename String
  location  String

  userId    String
  user      Users   @relation(fields: [userId], references: [id])

}

model Story {
  id          Int     @id @default(autoincrement())
  placename   String
  description String
  userId      String 
  user        Users   @relation(fields: [userId], references: [id])
}
