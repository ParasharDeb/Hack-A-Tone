generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  username String
  moods    Mood[]
  places   Places[]
  stories  Story[]
}

model Mood {
  id        Int      @id @default(autoincrement())
  type      String
  timestamp DateTime @default(now())
  
  userId    String
  user      Users    @relation(fields: [userId], references: [id])

  place     Places   @relation("PlaceToMood", fields: [placeId], references: [id])
  placeId   Int      @unique
}

model Places {
  id         Int      @id @default(autoincrement())
  city       String
  country    String
  placename  String
  location   String   // GMap URL
  timestamp  DateTime @default(now())

  userId     String
  user       Users    @relation(fields: [userId], references: [id])

  mood       Mood?    @relation("PlaceToMood", map: "Places_Mood_fkey")
  story      Story?   @relation("PlaceToStory", map: "Places_Story_fkey")
}

model Story {
  id        Int      @id @default(autoincrement())
  placename String

  userId    String
  user      Users    @relation(fields: [userId], references: [id])

  place     Places   @relation("PlaceToStory", fields: [placeId], references: [id])
  placeId   Int      @unique
}
